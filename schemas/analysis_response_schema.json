{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AnalysisResponse",
  "description": "Response of the call to the analyze endpoint",
  "type": "object",
  "properties": {
    "error": {
      "anyOf": [
        {
          "$ref": "#/definitions/Error"
        },
        {
          "type": "null"
        }
      ]
    },
    "result": {
      "anyOf": [
        {
          "$ref": "#/definitions/AnalysisResult"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "definitions": {
    "AnalysisResult": {
      "description": "Analysis result includes some statistics for a given portfolio",
      "type": "object",
      "required": [
        "cumulative_probability_of_loss",
        "expected_return",
        "worst_case_outcome"
      ],
      "properties": {
        "cumulative_probability_of_loss": {
          "type": "number",
          "format": "double"
        },
        "expected_return": {
          "type": "number",
          "format": "double"
        },
        "worst_case_outcome": {
          "$ref": "#/definitions/ProbabilityAndReturn"
        }
      }
    },
    "Error": {
      "description": "Error with a message and a code. The code should be an internal identifier that indicates what happened, while the message should be user-facing message that is supposed to help the user",
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "ProbabilityAndReturn": {
      "description": "Probability and return used to minimally represent an outcome",
      "type": "object",
      "required": [
        "probability",
        "weighted_return"
      ],
      "properties": {
        "probability": {
          "type": "number",
          "format": "double"
        },
        "weighted_return": {
          "type": "number",
          "format": "double"
        }
      }
    }
  }
}