{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AllocationResponse",
  "description": "Response of the call to the allocate endpoint, contains results of both allocation and analysis",
  "type": "object",
  "properties": {
    "error": {
      "anyOf": [
        {
          "$ref": "#/definitions/Error"
        },
        {
          "type": "null"
        }
      ]
    },
    "result": {
      "anyOf": [
        {
          "$ref": "#/definitions/AllocationResult"
        },
        {
          "type": "null"
        }
      ]
    },
    "validation_problems": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/definitions/ValidationResult"
      }
    }
  },
  "definitions": {
    "AllocationResult": {
      "description": "Allocation result includes tickers and their fractions",
      "type": "object",
      "required": [
        "allocations",
        "analysis"
      ],
      "properties": {
        "allocations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TickerAndFraction"
          }
        },
        "analysis": {
          "$ref": "#/definitions/AnalysisResult"
        }
      }
    },
    "AnalysisResult": {
      "description": "Analysis result includes some statistics for a given portfolio",
      "type": "object",
      "required": [
        "cumulative_probability_of_loss",
        "expected_return",
        "worst_case_outcome"
      ],
      "properties": {
        "cumulative_probability_of_loss": {
          "type": "number",
          "format": "double"
        },
        "expected_return": {
          "type": "number",
          "format": "double"
        },
        "worst_case_outcome": {
          "$ref": "#/definitions/ProbabilityAndReturn"
        }
      }
    },
    "Error": {
      "description": "Error with a message and a code. The code should be an internal identifier that indicates what happened, while the message should be user-facing message that is supposed to help the user",
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "ProbabilityAndReturn": {
      "description": "Probability and return used to minimally represent an outcome",
      "type": "object",
      "required": [
        "probability",
        "weighted_return"
      ],
      "properties": {
        "probability": {
          "type": "number",
          "format": "double"
        },
        "weighted_return": {
          "type": "number",
          "format": "double"
        }
      }
    },
    "Problem": {
      "description": "Validation problem with some basic information",
      "type": "object",
      "required": [
        "code",
        "message",
        "severity"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "$ref": "#/definitions/Severity"
        }
      }
    },
    "Severity": {
      "description": "Validation severity",
      "type": "string",
      "enum": [
        "ERROR",
        "WARNING"
      ]
    },
    "TickerAndFraction": {
      "description": "A ticker and a fraction used for minimalistic representation of the allocation calculation",
      "type": "object",
      "required": [
        "fraction",
        "ticker"
      ],
      "properties": {
        "fraction": {
          "type": "number",
          "format": "double"
        },
        "ticker": {
          "type": "string"
        }
      }
    },
    "ValidationResult": {
      "description": "Validation result can either be a Problem or Ok",
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "OK"
          ]
        },
        {
          "type": "object",
          "required": [
            "PROBLEM"
          ],
          "properties": {
            "PROBLEM": {
              "$ref": "#/definitions/Problem"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}